<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingBottom="10dp"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp" >

            <ImageView
                android:id="@id/food_list_item_favor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="6.0dip"
                android:paddingTop="6.0dip"
                android:src="@drawable/food_list_favor" />

            <TextView
                android:id="@+id/tv_foodName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:text="红烧狮子头"
                android:textColor="#000"
                android:textSize="17.0sp" />

            <TextView
                android:id="@+id/tv_foodPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="￥ 18元/份"
                android:textColor="#ff0000"
                android:textSize="13.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RatingBar
                android:id="@+id/ratingBar"
                style="@style/RatingBar.Grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="15dp"
                android:isIndicator="true"
                android:numStars="5"
                android:stepSize="0.5" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="25.0dip"
            android:layout_height="25.0dip"
            android:gravity="center"
            android:background="@drawable/selector_blue_corners_button"
            android:duplicateParentState="true"
            android:text=" — "
            android:visibility="invisible"
            android:textColor="@color/white"
           />

        <TextView
            android:id="@+id/tv_buyNum"
            android:layout_width="20.0dip"
            android:layout_height="20.0dip"
            android:duplicateParentState="true"
            android:gravity="center"
            android:text="0"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="#000"
            android:textSize="16.0sp" />

        <TextView
            android:id="@+id/tv_add"
            android:layout_width="25.0dip"
            android:layout_height="25.0dip"
            android:background="@drawable/selector_blue_corners_button"
            android:duplicateParentState="true"
            android:gravity="center"
            android:text=" + "
            android:textColor="@color/white"
             />
    </LinearLayout>

</RelativeLayout>